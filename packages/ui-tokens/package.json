{
  "name": "@nce/ui-tokens",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "main": "./tailwind.config.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./tailwind.config.js"
    },
    "./tailwind.config": "./tailwind.config.js",
    "./generated": "./generated",
    "./generated/js": "./generated/js/tokens.js",
    "./generated/css": "./generated/css/variables.css"
  },
  "scripts": {
    "build": "node ../../node_modules/style-dictionary/bin/style-dictionary.js build --config config.json",
    "watch": "node ../../node_modules/style-dictionary/bin/style-dictionary.js build --config config.json --watch",
    "clean": "rm -rf generated",
    "lint": "tsc --noEmit"
  },
  "devDependencies": {
    "style-dictionary": "^5.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.3"
  }
}
