# Required for LLM features (Story generation, Chat, etc.)
DEEPSEEK_API_KEY=your_deepseek_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
MODEL_NAME=deepseek-chat

# Required for Google Voice (TTS & STT)
# Uses Gemini 2.0 Flash Multimodal capabilities
GEMINI_API_KEY=your_gemini_key_here
# Optional: Specific voice model name (defaults to gemini-2.5-flash-native-audio-preview-12-2025 in config.py)
# GEMINI_VOICE_MODEL_NAME=gemini-2.0-flash-exp

# Database Configuration (Defaults to local postgres if not set)
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/nce_practice

# --- Voice Lab Vendor Integrations ---

# ElevenLabs (High Quality TTS)
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# Deepgram (Fast TTS & STT)
DEEPGRAM_API_KEY=your_deepgram_key_here

# Azure Speech Services (TTS & STT)
AZURE_SPEECH_KEY=your_azure_key_here
AZURE_SPEECH_REGION=eastus

DASHSCOPE_API_KEY=xxx


ZHIPU_API_KEY=xxx
ENABLE_IMAGE_GENERATION=false

# Authentication (IMPORTANT: Change SECRET_KEY in production!)
# Generate with: openssl rand -hex 32
SECRET_KEY=your-32-byte-hex-secret-key
ALLOW_REGISTRATION=true  # Set to false to disable public registration